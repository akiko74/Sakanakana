<p id="notice"><%= notice %></p>

<p>
  <b>ダイビングの日付:</b>
  <%= @divelog.logdate %>
  <b>ポイント:</b>
  <%= @divelog.divesite.pointname %>
</p>

<% @pictures.each do |picture| %>
 <tr>
   <td><%= image_tag picture.image.url(:thumb) %></td>
 <% end %>
 </tr>

<% @details.each do |detail| %>
<% @picture = detail.pictures.first %>
 <tr>
   <td><%#= link_to detail.name, detail_path(:id => detail.id) %></td>
   <td><%= link_to detail.name, picture_path(:id => @picture.id, :detail_id => detail.id) %></td>
 <% end %>
 </tr>

<%= link_to 'Edit', edit_divelog_path(@divelog) %> |
<%= link_to 'Back', divelogs_path %>
