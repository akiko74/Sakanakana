<div id="index-right" class="clearfix">
</div>

<div id="main">
<%= form_for :details, :html => {:method => :get } do |f| %>
 <%= text_field_tag(:keyword)%>
 <%= f.submit "Search" %>
<% end %>

<table>
  <tr>
    <th>Name</th>
    <th>Englishname</th>
    <th>Othername</th>
    <th>Description</th>
  </tr>

<% @details.each do |detail| %>
  <tr>
    <td><%= detail.name %></td>
    <td><%= detail.englishname %></td>
    <td><%= detail.othername %></td>
   <% picture = detail.pictures.first %>
   <% unless  picture.nil? %>
    <td><%= link_to image_tag(detail.pictures.first.image.url(:thumb)), detail %></td>
   <% end %>
    <td><%= link_to 'Edit', edit_detail_path(detail) %></td>
    <td><%= link_to 'Destroy', detail, :confirm => 'Are you sure?', :method => :delete %></td>
    <td><%= link_to 'New', new_picture_path(:detail_id => detail.id) %></td> 
</tr>
<% end %>
</table>

<br />

<%= link_to 'New Detail', new_detail_path %>
</div>
