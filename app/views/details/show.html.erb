<% content_for :title do %>
<%= @detail.name %>
<% end %> 
<%= notice %>

<%= render 'layouts/shared/rightthumb' %>

<div id="main">
    <h3><%= @detail.name %></h3>
 <%= render 'layouts/shared/lightbox' %>  

<table>
     <tr>
     <th>種別</th>
        <td><%= @detail.genre.genrename %></td>
     </tr>
     <tr>
        <th>名前</th>
          <td><%= @detail.name %></td>
     </tr>
     <tr>
        <th>英名</th>
        <td><%= @detail.englishname %></td>
     </tr>
     <tr>
      <th>別名</th>
        <td><%= @detail.othername %></td>
     </tr>
     <tr>
        <th>特徴など</th>
          <td><%= @detail.description %></td>
     </tr> 
  </table>
  <table>
      <tr>
        <th>見られたポイント</th>
      </tr>
      <tr>
        <td>
           <% @divesites.each do |d| %>
           <%= link_to d.pointname, divesite_path(:id => d.id) %>
           <% end %>
        </td>
      </tr>
      <tr>
          <th>魚についてるタグ</th>
      </tr>
      <tr>
         <td>
           <% @tags.each do |t| %>
           <%= link_to t.tagname, tag_path(:id => t.id) %>
           <% end %>
         </td>
      </tr>
    <tr>
      <td><%= link_to('戻る', :back) %></td>
    </tr>
</table>
</div>
