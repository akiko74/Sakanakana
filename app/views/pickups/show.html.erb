<%= render 'layouts/shared/javascript' %>

<% content_for :title do %>
<%= @pickup.created_at.strftime("%Y-%m-%d") %> &nbsp;オススメ写真
<% end %>

<div id="index-right">
 <div id="whatsnew">
   <p>更新日</p>
 </div>
 <div id="whatsnew_cont">
   <% @pickups.each do |pickup| %>
   <dl>
     <dt><%= link_to pickup.created_at.strftime("%Y-%m-%d"), pickup %></dt>
     <dd><%= truncate(pickup.comment, :length => 15) %></dd>
   <% end %>
 </div>
 <%= will_paginate @pickups %>
</div>

<div id="main">
<p id="notice"><%= notice %></p>
 <h2>
     更新日：<%= @pickup.created_at.strftime("%Y-%m-%d") %> &nbsp; <%= @detail.name %>
 </h2>
 <%= render 'layouts/shared/lightbox' %>
 <div id="main_cont">
 <p><%= @pickup.comment %></p>
 <p><%= link_to @detail.name, detail_path(@detail, :picture_id => @picture_first.id) %>を見る</p>
<p><a href="http://twitter.com/share" class="twitter-share-button" data-count="horizontal" data-via="akiko74" data-lang="ja">ツイート</a><script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script></p>
<% if admin_signed_in? %>
<p><%= link_to 'Edit', edit_pickup_path(@pickup) %></p>
<p><%= link_to 'Destroy', @pickup, :confirm => 'Are you sure?', :method => :delete %></p>
<% end %>
</div>
